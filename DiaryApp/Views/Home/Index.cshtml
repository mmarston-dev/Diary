@model List<DiaryEntry>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Diary Entries</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Home" asp-action="Create">
                <i class="bi bi-journal-plus"></i>
                Create Diary Entry
            </a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
